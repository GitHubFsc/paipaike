.multi-selector--value {
    position: relative;
    width: 100%;
    height: 100%;
    text-overflow: ellipsis;
    overflow: hidden;
    padding-left: 20rpx;
}

.checkboxItem {
    display: inline-block;
    width: 600rpx;
    font-size: 30rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    text-align: left;
}

.multi-selector--placeholder {
    position: absolute;
    width: 100%;
    height: 100%;
    left: 0;
    top: 0;
}

.multi-selector--modal {
    position: fixed;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    background: rgba(0, 0, 0, 0.3);
    z-index: 999;
}

.multi-selector--area {
    box-sizing: border-box;
    position: fixed;
    width: 100%;
    bottom: 0;
    left: 0;
    height: 600rpx;
    background: white;
    padding: 40rpx;
    z-index: 999;
    color: #9b9b9b;
    display: flex;
    flex-direction: column;
}

.multi-selector--menu {
    width: 100%;
    display: flex;
    justify-content: space-between;
    padding-bottom: 50rpx;
    flex: 0;
    border-bottom: 1rpx solid #eae5e5;

}

.multi-selector--menu-cancel {
    color: #9b9b9b;
}

.multi-selector--menu-confirm {
    color: #469bba;
}

.input-placeholder {
    font-size: 28rpx;
    line-height: 70rpx;
    padding-left: 20rpx;
}

.multi-selector--checkbox-wrapper {
    flex: 1;
    padding: 20rpx 0;
    box-sizing: border-box;
    overflow: hidden;
}

.multi-selector--checkbox {
    display: block;
    width: 100%;
    height: 100%;
    overflow-y: auto;
}

.multi-selector--checkbox-item {
    display: flex;
    justify-content: space-between;
    box-sizing: border-box;
    width: 100%;
    font-size: 36rpx;
    line-height: 70rpx;
}

.multi-selector--checkbox-item.is_checked {
    color: #469bba;
}