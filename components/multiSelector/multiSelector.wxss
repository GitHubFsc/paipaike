/* components/multiSelector/multiSelector.wxss */

multi-selector {
    display: block;
    white-space: nowrap;
    font-family: UICTFontTextStyleBody;
    min-height: 70rpx;
    position: relative;
    width: 100%;
    overflow: hidden;
}

.multi-selector {
    width: 100%;
    height: 70rpx;
    /* height: 600rpx; */
    overflow: hidden;
    text-overflow: ellipsis;
}

