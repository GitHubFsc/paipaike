page {
  background-color: #fff;
}
.promote-header {
  display: flex;
  align-items: center;
  padding: 20rpx 26rpx  20rpx;
  height: 200rpx;
  border-top: 2rpx solid #E5E5E5;
  box-sizing: border-box;
}
.promote-header .header-lt {
  width: 200rpx;
  height: 100%;
}
.promote-header .header-lt image {

  width: 160rpx;
  height: 160rpx;
}
.promote-header .header-rt {
  height: 100%;
  margin-left: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.promote-header .header-rt .header-title {
  /* width: 70%; */
  /* height: 100%; */
  overflow: hidden;
  text-overflow: ellipsis;
  color: #333;
  font-size: 30rpx;
  font-weight: 500;
}
.promote-header .header-rt .people-count {
  color: #999;
  font-size: 28rpx;
  font-weight: 400;
}
.promote-main {
  border-top: 20rpx solid #FAFAFC;
}
.promote-main .main-title {
  font-size: 28rpx;
  color: #333;
  font-weight: 600;
  padding: 23rpx 0 25rpx 20rpx;
  box-sizing: border-box;
}
.promote-main .main-table .td {
  width: 160rpx;
}
.promote-main .main-table .thead {
  display: flex;
  border-top: 1rpx solid #E5E5E5;
}
.promote-main .main-table .thead .td {
  flex: 1;
  height: 99rpx;
  font-size: 26rpx;
  color: #666;
  font-weight: 400;
  line-height: 99rpx;
  text-align: center;
}
.promote-main .main-table .tr {
  display: flex;
  border-top: 1rpx solid #E5E5E5;
}
.promote-main .main-table .tr .td {
  flex: 1;
  height: 99rpx;
  color: #333;
  font-size: 26rpx;
  font-weight: 400;
  line-height: 99rpx;
  text-align: center;
}
.promote-main .main-table .tr:last-child {
  border-bottom: 1rpx solid #E5E5E5;
}
