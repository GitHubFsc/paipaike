/* pages/makeUpClass/makeUpClass.wxss */

page {
    background-color: #fff;
}

.dataMain{
    padding-bottom: 100rpx;
}
.classItem {
    width: 100%;
    border: 1rpx solid #bcbcbc;
    overflow: hidden;
    border-radius: 4rpx;
    height: 220rpx;
    margin-bottom: 30rpx;
}

.classItem .leftInfo {
    width: 85%;
    float: left;
    font-size: 28rpx;
}

.leftInfo .ite {
    padding-left: 20rpx;
}

.leftInfo .ite text:nth-child(2) {
    font-size: 26rpx;
    color: #5a5a5a;
}

.leftInfo .ite:first-child {
    padding-top: 35rpx;
    margin-bottom: 15rpx;
}

.leftInfo .ite:last-child {
    padding-bottom: 35rpx;
    margin-top: 15rpx;
}

.leftInfo .classTitle {
    color: #1a1a1a;
    margin-right: 25rpx;
}

.classItem .rightHandle {
    width: 15%;
    background-color: #469bba;
    float: right;
    height: 220rpx;
    position: relative;
}

.radioDom {
    position: absolute;
    width: 40rpx;
    height: 40rpx;
    left: 50%;
    margin-left: -20rpx;
    top: 50%;
    margin-top: -30rpx;
}

.checked-lable radio {
    transform: scale(0.8);
}


radio .wx-radio-input.wx-radio-input-checked {
    border: 1rpx solid #fff;
    background: #fff;
    border-radius: 50% 50%;
}

.leftBtn, .rightBtn {
    width: 45%;
    height: 70rpx;
    background-size: 100%;
    margin-top: 30rpx;
    border: 4rpx solid #469bba;
    border-radius: 20rpx;
    position: relative;
    margin: 60rpx auto 0 auto;
    display: inline-block;
    text-align: center;
}

.rightBtn {
    margin-left: 5%;
    background-color: #469bba;
    position: absolute;
}

.rightBtn image {
    width: 30rpx;
    height: 30rpx;
    background-size: 100% 100%;
    margin-right: 20rpx;
    display: inline-block;
    vertical-align: middle;
}

.rightBtn .rightTxt {
    color: #fff !important;
    display: inline-block;
    vertical-align: middle;
}

.leftBtn  text, .rightBtn text {
    color: #469bba;
    text-align: center;
    line-height: 70rpx;
    font-size: 30rpx;
    display: inline-block;
    vertical-align: middle;
}

.noData {
    width: 100%;
    height: 100%;
    text-align: center;
    position: absolute;
    background-color: #f5f5f5;
}

.tipsImg {
    width: 240rpx;
    height: 269rpx;
    background-size: 100% 100%;
    text-align: center;
    margin-top: 200rpx;
    margin-bottom: 300rpx;
}

.bottonBtn {
    width: 50%;
    height: 70rpx;
    background-size: 100%;
    border-radius: 20rpx;
    position: relative;
    margin: 60rpx auto 0 auto;
    background-color: #469bba;
    margin-left: 25%;
    text-align: center;
}

.bottonBtn image {
    width: 30rpx;
    height: 30rpx;
    background-size: 100% 100%;
    display: inline-block;
    vertical-align: middle;
    margin-right: 20rpx;
}

.bottonBtn .rightTxt {
    color: #fff;
    text-align: center;
    line-height: 70rpx;
    font-size: 30rpx;
    display: inline-block;
    vertical-align: middle;
}


checkbox .wx-checkbox-input.wx-checkbox-input-checked {
    border: 1rpx solid #469bb8;
    border-radius: 50% 50%;
}


checkbox .wx-checkbox-input{
  border-radius: 50%;
}