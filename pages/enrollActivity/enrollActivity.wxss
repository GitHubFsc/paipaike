.notice-title {
    /* background-color: #fff; */
    margin: 30rpx 0;
}
.notice-title view {
    font-size: 34rpx;
    font-weight: 600;
    padding-left: 28rpx;
}
.notice-title input {
    margin-top: 20rpx;
    height: 70rpx;
    font-size: 34rpx;
    line-height: 70rpx;
    background-color: #fff;
    padding-left: 28rpx;

}

.mainBg {
    background-color: #fff;
    border-top: 1rpx solid #e5e5e5;
    box-shadow: 0 0 10rpx rgba(153, 153, 153, 0.2);
}

.txtDom {
    margin: 30rpx 25rpx;
}

.mainBg textarea {
    font-size: 28rpx;
    width: 100%;
}


.uploadImg {
    width: 100%;
    height: 150rpx;
    background-color: #e8e8e8;
    position: relative;
    margin-top: 40rpx;
}

.uploadImg image {
    position: absolute;
    width: 60rpx;
    height: 60rpx;
    background-size: 100% 100%;
    top: 50%;
    margin-top: -30rpx;
    left: 50%;
    margin-left: -30rpx;
}

.uploadedImg {
    margin-top: 20rpx;
    overflow: hidden;
}

.imgItem {
    width: 25%;
    height: 140rpx;
    background-size: 100% 100%;
    border-radius: 10rpx 10rpx;
    display: inline-block;
    position: relative;
}

.imgItem image {
    width: 90%;
    height: 90%;
    background-size: 100% 100%;
    margin-left: 5%;
    margin-top: 5%;
    border-radius: 8rpx;
}

.iconClass {
    position: absolute;
    width: 15rpx;
    height: 15rpx;
    z-index: 99;
    top: 3%;
    right: 13%;
}
