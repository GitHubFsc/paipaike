page {
    width: 100%;
    height: 100%;
    background-color: #fff;
}

.container {
    width: 100%;
    height: 100%;
}

.nav {
    width: 100%;
    box-sizing: border-box;
    overflow: hidden;
    background: #fff;
    font-size: 16px;
    white-space: nowrap;
    position: fixed;
    top: 0;
    left: 0;
    z-index: 99;
}

.nav-item {
    display: inline-block;
    font-size: 30rpx;
    height: 60rpx;
    line-height: 60rpx;
    margin-bottom: 10rpx;
    width: 200rpx;
    text-align: left;
    font-weight: 400;
}

.nav-item:first-child {
    margin-left: 25rpx;
}

.line {
    width: 111rpx;
    height: 4rpx;
    background-color: #c5aa73;
    text-align: center;
    margin: 0 auto;
}

.nav-item.active {
    color: #c5aa73;
}

.tab-box {
    /* height: 2500rpx; */
    margin-top: 85rpx;
}

.tab-content {
    overflow-y: scroll;
}

.swiperItems image {
    width: 100%;
}