/* pages/makeUpClass/studentManage.wxss */

page {
    background-color: #f5f5f5;
}

.letterItem {
    width: 100%;
    overflow: hidden;
    border-radius: 6rpx;
    position: relative;
    background-color: #fff;
    box-shadow: 0 0 10rpx rgba(153, 153, 153, 0.2);
    margin-top: 15rpx;
}
.letterFormName {
    color: #469db9 !important;
    display: inline;
    font-size: 32rpx !important;
}
.letterItem .letterInfo {
    width: 100%;
    font-size: 28rpx;
    height: 140rpx;
}

.letterInfoTxt {
    text-overflow: ellipsis;
    white-space: nowrap;
    overflow: hidden;
    color: #999;
    font-size: 24rpx;
}

.letterInfo .ite {
    padding-left: 5%;
    padding-right: 5%;
    width: 82%;
    display: inline-block;
    vertical-align: top;
    height: 140rpx;
    margin-top: 30rpx;
}

.letterInfo {
}

.select-icon {
    width: 8%;
    display: inline-block;
    background-color: green;
}

.select-icon image {
    position: absolute;
    width: 35rpx;
    height: 35rpx;
    background-size: 100% 100%;
    margin-top: 20rpx;
    vertical-align: middle;
}

.letterInfo .classTitle {
    color: #101010;
    margin-right: 25rpx;
    font-size: 28rpx;
}
